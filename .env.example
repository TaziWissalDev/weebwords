# Daily Anime Puzzle Pack Environment Variables

# Database
DATABASE_PATH=./daily-packs.db

# Server Configuration
PORT=3000
NODE_ENV=development

# Reddit/Devvit Configuration (for production)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Optional: External API Keys (for future enhancements)
# OPENAI_API_KEY=your_openai_key_for_content_generation
# MODERATOR_API_KEY=your_content_moderation_key

# Logging
LOG_LEVEL=info

# Pack Generation
DAILY_PACK_SIZE=8
MAX_LEADERBOARD_SIZE=100
